rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read images
    match /restaurants/{restaurantId}/menu/{allPaths=**} {
      allow read: if true; // Public read for menu images
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'restaurant_admin' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
    }
    
    // Allow restaurant admins to upload restaurant logos
    match /restaurants/{restaurantId}/logo/{allPaths=**} {
      allow read: if true; // Public read for restaurant logos
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'restaurant_admin' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
    }
    
    // Allow authenticated users to upload profile pictures
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true; // Public read for profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow restaurant admins to upload documents
    match /restaurants/{restaurantId}/documents/{allPaths=**} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'restaurant_admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'waiter') &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'restaurant_admin' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
    }
  }
}
